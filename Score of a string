
class Main {
    public static void main(String[] args) {
        int ans=0;
         String s = "hello";
         for (int i=0;i<s.length()-1;i++){
             int a=i;
             int b=i+1;
             char c= s.charAt(a);
             char d=s.charAt(b);
             int e=c;
             int f=d;
             int temp=Math.abs(e-f);
             ans=ans+temp;
             
         }
         System.out.println(ans);
         }
}
